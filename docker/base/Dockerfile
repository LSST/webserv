        cmake \
        curl \
        flex \
        g++ \
        gettext \
        vim \
        rsync \
        git \
        libbz2-dev \
        libglib2.0-dev \
        libpthread-workqueue-dev \
        libreadline-dev \
        libssl-dev \
        libsm6 \
        make \
        ncurses-dev \
        openssl \
        patch \
        python-dev \
        zlib1g-dev &&\
        apt-get -y clean
